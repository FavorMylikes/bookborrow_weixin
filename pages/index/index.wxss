@import "../../dist/style/wxui.wxss";
.userinfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar,
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}
.userinfo-avatar {
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.show {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.hide {
  display: none;
}
.userinfo-avatar-sm {
  width: 32rpx;
  height: 32rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-avatar-md {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.avatar-card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.avatar-card .avatar-image {
  width: 128rpx;
  height: 128rpx;
}
.avatar-card .avatar-info {
  margin: 0 0 0 20rpx;
  font-size: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.avatar-card .avatar-info .avatar-info-nickname {
  color: #0E0E0E;
}
.avatar-card .avatar-info .avatar-info-book {
  font-size: smaller;
  color: #282828;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.avatar-card .avatar-info .avatar-info-book .avatar-info-book-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.avatar-card .avatar-info .avatar-info-badge {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 300rpx 0 0;
  font-size: smaller  ;
  color: #414141;
}
.avatar-card .avatar-info .avatar-info-badge .avatar-info-badge-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.badge-1 {
  color: rgb(255,204,1);
}
.badge-2 {
  color: rgb(180,184,188);
}
.badge-3 {
  color: rgb(209,166,132);
}
.book-describe {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: row;
  flex-flow: row;
  -webkit-align-items: center;
  align-items: center;
}
.book-describe .book-image {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
}
.book-describe .book-info {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
  flex: 3;
}
.book-describe .book-info .book-info-items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: column;
  flex-flow: column;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}
.book-describe .book-info .book-info-items .book-info-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 20rpx;
}
.button-items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: row;
  flex-flow: row;
}
.button-items button {
  padding: 20rpx;
}

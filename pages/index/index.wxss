/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.show{
  display: flex;
}

.hide{
  display: none;
}

.userinfo-avatar-sm {
  width: 32rpx;
  height: 32rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-avatar-md {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;
}